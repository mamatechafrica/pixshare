<div class="container" style="display: flex; justify-content: center; align-items: center; height: 50vh;">
  <div class="card w-100" style="border-radius: 7px;">
    <div class="card-header">
      <h1><%= t('.forgot_your_password') %></h1>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= bootstrap_devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
      <br>
        <div class="form-group">
          <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-dark', style: "margin-bottom: 10px;" %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    
    </div>
  </div>
</div>

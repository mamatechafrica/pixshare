<!-- _navbar.html.erb -->
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("ps-icon.png", alt: "Pix Share Logo", class: "logo-image", style: "max-height:50px; max-width:100px; border-radius: 10px;") %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse align-items-center" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="<%= new_photo_path %>">Upload Photo</a>
        </li>
      </ul>

      <form class="d-flex mx-auto" action="<%= search_index_path %>">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-dark" type="submit">Search</button>
      </form>

      <ul class="navbar-nav d-flex align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item me-3">
            <%= link_to user_path(current_user), class: "btn btn-outline-dark" do %>
              My Profile
            <% end %>
          </li>
          <li class="nav-item me-3">
            <a class="btn btn-outline-dark" href="<%= destroy_user_session_path %>" data-method="delete">Logout</a>
          </li>
          <li class="nav-item">
            <%= link_to edit_user_registration_path, class: "nav-link" do %>
              <%= image_tag(current_user.avatar, class: "avatar-image", style: "max-height:45px; max-width:45px; border-radius: 20%;") if current_user.avatar.attached? %>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item me-3">
            <a class="btn btn-outline-dark" href="<%= new_user_registration_path %>">Sign Up</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-dark" href="<%= new_user_session_path %>">Login</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
